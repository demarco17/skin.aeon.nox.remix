<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio + String.IsEmpty(Window(videos).Property(PlayingBackgroundMedia))</visible>
		</control>
		<control type="group">
			<visible>!String.IsEmpty(Player.Art(fanart)) + !Skin.HasSetting(HideVisualizationFanart)</visible>
			<include>VisibleFadeAnimation</include>
			<control type="image">
				<description>Fanart image</description>
				<include>FullscreenDimensions</include>
				<fadetime>CrossfadeTime</fadetime>
				<texture background="true">$INFO[Player.Art(fanart)]</texture>
				<animation effect="fade" start="100" end="40" condition="!String.IsEmpty(Visualisation.Name)">Conditional</animation>
			</control>
		</control>
		<control type="label" id="1">
			<left>30</left>
			<top>30</top>
			<width>300</width>
			<height>50</height>
			<label>$INFO[Player.SeekNumeric]</label>
			<font>font35_title_bold</font>
			<visible>!String.IsEmpty(Player.SeekNumeric) + !Window.IsActive(musicosd)</visible>
		</control>
		<!-- media infos -->
		<control type="fadelabel">
			<width>1920</width>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>BigAssFont</font>
			<pauseatend>200</pauseatend>
			<aligny>center</aligny>
			<label>               $INFO[Player.Title]</label>
			<label>               $INFO[MusicPlayer.Artist]</label>
			<label>               $INFO[MusicPlayer.Album]</label>
			<textcolor>40FFFFFF</textcolor>
			<shadowcolor />
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(BigAssLabel)</visible>
		</control>
		<control type="fadelabel">
			<width>1080</width>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>BigAssFont</font>
			<pauseatend>200</pauseatend>
			<aligny>center</aligny>
			<label>               $INFO[MusicPlayer.Artist]</label>
			<label>               $INFO[MusicPlayer.Album]</label>
			<label>               $INFO[Player.Title]</label>
			<textcolor>40FFFFFF</textcolor>
			<shadowcolor />
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(BigAssLabel)</visible>
			<animation effect="rotate" tween="cubic" time="720" center="auto" end="90" condition="true">Conditonal</animation>
		</control>
		<control type="group">
			<top>540</top>
			<visible>[Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(Addon)]</visible>
			<include>VisibleFadeAnimation</include>
			<include>OpenCloseAnimation</include>
			<control type="image">
				<top>-200</top>
				<width>1920</width>
				<height>750</height>
				<texture>dialogs/nowplaying_shadow.png</texture>
			</control>
			<control type="grouplist">
				<top>35</top>
				<width>1180</width>
				<height>460</height>
				<itemgap>23</itemgap>
				<control type="label">
					<left>1140</left>
					<width>1180</width>
					<height>40</height>
					<font>font48_title</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>grey</textcolor>
					<label>$INFO[MusicPlayer.TrackNumber,[COLOR $VAR[SkinThemeColour]],. [/COLOR]]$INFO[Player.Title]</label>
				</control>
				<control type="image">
					<left>1140</left>
					<width>1170</width>
					<height>40</height>
					<aspectratio align="right">keep</aspectratio>
					<texture fallback="flags/rating/empty.png" colordiffuse="goldenrod">$VAR[MusicPlayerStarRating]</texture>
				</control>
				<control type="label">
					<left>1140</left>
					<width>1180</width>
					<height>40</height>
					<font>font16</font>
					<align>right</align>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>[B]$INFO[MusicPlayer.Artist][/B]</label>
				</control>
				<control type="label">
					<left>1140</left>
					<width>1180</width>
					<height>40</height>
					<font>font16</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>grey</textcolor>
					<label>$INFO[musicplayer.discnumber,[B]$LOCALIZE[427]:[/B] ]$INFO[MusicPlayer.Year, [COLOR $VAR[SkinThemeColour]][,][/COLOR]]</label>
				</control>
				<control type="grouplist">
					<left>1140</left>
					<width>1165</width>
					<height>50</height>
					<orientation>horizontal</orientation>
					<itemgap>20</itemgap>
					<align>right</align>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<description>ADSP Master Mode Image</description>
						<top>-8</top>
						<width>100</width>
						<height>70</height>
						<aspectratio align="right">keep</aspectratio>
						<visible>system.getbool(audiooutput.dspaddonsenabled) + !String.IsEmpty(ADSP.MasterOwnIcon)</visible>
						<texture>$INFO[ADSP.MasterOwnIcon]</texture>
					</control>
					<control type="image">
						<top>-8</top>
						<width>100</width>
						<height>70</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="grey">$VAR[VisMediaFlags]</texture>
						<visible>String.IsEmpty(ADSP.MasterOverrideIcon)</visible>
					</control>
					<control type="image">
						<description>ADSP Audio Codec Override Image</description>
						<top>-8</top>
						<width>100</width>
						<height>70</height>
						<aspectratio align="right">keep</aspectratio>
						<visible>system.getbool(audiooutput.dspaddonsenabled) + !String.IsEmpty(ADSP.MasterOverrideIcon)</visible>
						<texture>$INFO[ADSP.MasterOverrideIcon]</texture>
					</control>
					<control type="label">
						<width min="50" max="200">auto</width>
						<height>50</height>
						<font>font16</font>
						<textcolor>grey</textcolor>
						<label>$INFO[musicplayer.Bitrate,[COLOR $VAR[SkinThemeColour]],[/COLOR] ]kbps</label>
						<visible>!String.IsEmpty(musicplayer.Bitrate)</visible>
					</control>
				</control>
				<control type="label">
					<left>1140</left>
					<width>1180</width>
					<height>35</height>
					<font>font16</font>
					<textoffsetx>15</textoffsetx>
					<align>right</align>
					<textcolor>grey</textcolor>
					<label>[COLOR $VAR[SkinThemeColour]]$LOCALIZE[19031]:[/COLOR] $INFO[MusicPlayer.offset(1).TrackNumber,,. ]$INFO[MusicPlayer.offset(1).Title]$INFO[MusicPlayer.offset(1).Artist, - ,]</label>
				</control>
				<control type="label">
					<description>Time Label</description>
					<left>1140</left>
					<height>50</height>
					<width>1180</width>
					<align>right</align>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
					<font>font48</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
				</control>
			</control>
			<control type="group">
				<left>1180</left>
				<control type="group">
					<visible>!Skin.HasSetting(VizCDCase)</visible>
					<control type="image">
						<left>200</left>
						<width>500</width>
						<height>500</height>
						<aligny>top</aligny>
						<aspectratio align="left">keep</aspectratio>
						<fadetime>CrossfadeTime</fadetime>
						<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
						<texture background="true" fallback="thumbs/Fallback_CDArt.png" diffuse="thumbs/cdart_mask.png">$INFO[Player.FolderPath]cdart.png</texture>
						<bordersize>30</bordersize>
					</control>
					<control type="image">
						<description>Cover image</description>
						<width>500</width>
						<height>500</height>
						<aspectratio align="right">stretch</aspectratio>
						<texture diffuse="thumbs/cdcover_mask2.png" fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
						<bordertexture border="28">thumbs/cd_shadow2.png</bordertexture>
						<bordersize>28</bordersize>
					</control>
				</control>
				<control type="group">
					<visible>Skin.HasSetting(VizCDCase)</visible>
					<control type="image">
						<left>260</left>
						<top>15</top>
						<width>470</width>
						<height>470</height>
						<aligny>top</aligny>
						<aspectratio align="left">keep</aspectratio>
						<fadetime>CrossfadeTime</fadetime>
						<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
						<texture background="true" fallback="thumbs/Fallback_CDArt.png" diffuse="thumbs/cdart_mask.png">$INFO[Player.FolderPath]cdart.png</texture>
						<bordersize>30</bordersize>
					</control>
					<control type="image">
						<description>Cover image</description>
						<left>78</left>
						<top>40</top>
						<width>415</width>
						<height>415</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
					</control>
					<control type="image">
						<left>30</left>
						<top>33</top>
						<width>490</width>
						<height>447</height>
						<texture>thumbs/boxes/cdcase.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>