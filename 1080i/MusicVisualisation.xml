<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio + String.IsEmpty(Window(videos).Property(PlayingBackgroundMedia))</visible>
		</control>
		<control type="group">
			<visible>!String.IsEmpty(Player.Art(fanart)) + !Skin.HasSetting(HideVisualizationFanart)</visible>
			<include>VisibleFadeAnimation</include>
			<control type="image">
				<description>Fanart image</description>
				<include>FullscreenDimensions</include>
				<fadetime>CrossfadeTime</fadetime>
				<texture background="true">$INFO[Player.Art(fanart)]</texture>
				<animation effect="fade" start="100" end="40" condition="!String.IsEmpty(Visualisation.Name)">Conditional</animation>
			</control>
		</control>
		<control type="label" id="1">
			<left>30</left>
			<top>30</top>
			<width>300</width>
			<height>50</height>
			<label>$INFO[Player.SeekNumeric]</label>
			<font>font35_title_bold</font>
			<visible>!String.IsEmpty(Player.SeekNumeric) + !Window.IsActive(musicosd)</visible>
		</control>
		<control type="group">
			<top>815</top>
			<visible>Player.ShowInfo + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(Addon)]</visible>
			<include>VisibleFadeAnimation</include>
			<include>OpenCloseAnimation</include>
			<control type="image">
				<top>-35</top>
				<width>1920</width>
				<height>320</height>
				<texture border="4" flipy="true">dialogs/InfoBar.png</texture>
			</control>
			<control type="image">
				<top>-255</top>
				<width>1920</width>
				<height>520</height>
				<texture>dialogs/logo_back.png</texture>
			</control>
			<control type="image">
				<top>-94</top>
				<width>360</width>
				<height>372</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture background="true" fallback="DefaultAlbumCover.png">$VAR[HomeNowPlayingThumbVar]</texture>
				<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
				<bordersize>20</bordersize>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="image">
				<top>-40</top>
				<width>360</width>
				<height>318</height>
				<aspectratio aligny="center">keep</aspectratio>
				<texture fallback="settings/icons/livetv.png" background="true">$VAR[HomeNowPlayingThumbVar]</texture>
				<bordersize>20</bordersize>
				<visible>Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label">
				<left>345</left>
				<top>-30</top>
				<width>1405</width>
				<height>60</height>
				<font>font24_title_bold</font>
				<scroll>true</scroll>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[MusicPlayer.TrackNumber,[COLOR grey2],. [/COLOR]]$INFO[Player.Title]</label>
			</control>
			<control type="label">
				<left>345</left>
				<top>25</top>
				<width>1405</width>
				<height>40</height>
				<font>font13_title</font>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[MusicPlayer.Artist]</label>
			</control>
			<control type="label">
				<left>345</left>
				<top>65</top>
				<width>1570</width>
				<height>40</height>
				<font>font13</font>
				<textcolor>grey</textcolor>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Year,[COLOR grey2] (,)[/COLOR]]$INFO[musicplayer.discnumber,[COLOR grey3]  |  [/COLOR]$LOCALIZE[427]: ,]</label>
			</control>
			<control type="label">
				<left>345</left>
				<top>105</top>
				<width>1570</width>
				<height>40</height>
				<font>font13</font>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[MusicPlayer.Genre,$LOCALIZE[515]: [COLOR grey],[/COLOR]]</label>
			</control>
			<control type="label">
				<left>345</left>
				<top>105</top>
				<width>1570</width>
				<height>40</height>
				<font>font13</font>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<textoffsetx>15</textoffsetx>
				<align>right</align>
				<label>$INFO[MusicPlayer.offset(1).TrackNumber,$LOCALIZE[19031]: [COLOR grey2],. [/COLOR]]$INFO[MusicPlayer.offset(1).Title,[COLOR grey],[/COLOR]]$INFO[MusicPlayer.offset(1).Artist,[COLOR grey][COLOR grey3]  |  [/COLOR],[/COLOR]]</label>
			</control>
			<control type="image">
				<left>360</left>
				<top>105</top>
				<width>160</width>
				<aspectratio>keep</aspectratio>
				<texture fallback="flags/rating/empty.png" colordiffuse="goldenrod">$VAR[MusicPlayerStarRating]</texture>
			</control>
			<control type="image" id="800015">
				<left>1730</left>
				<top>-15</top>
				<width>150</width>
				<height>70</height>
				<colordiffuse>grey</colordiffuse>
				<aspectratio align="right">keep</aspectratio>
				<texture>resource://resource.images.recordlabels.white/$INFO[MusicPlayer.Property(Album_Label),,.png]</texture>
			</control>
			<control type="label">
				<left>1690</left>
				<top>-15</top>
				<width>200</width>
				<height>70</height>
				<align>center</align>
				<label>$INFO[MusicPlayer.Property(Album_Label)]</label>
				<font>font10</font>
				<textcolor>grey</textcolor>
				<wrapmultiline>true</wrapmultiline>
				<visible>String.IsEmpty(Control.GetLabel(800015))</visible>
			</control>
			<control type="grouplist">
				<left>1308</left>
				<top>142</top>
				<width>600</width>
				<height>90</height>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<itemgap>25</itemgap>
				<control type="button">
					<top>18</top>
					<width>130</width>
					<height>52</height>
					<texturefocus>flags/flag.png</texturefocus>
					<texturenofocus>flags/flag.png</texturenofocus>
					<font>flag_font</font>
					<textcolor>grey</textcolor>
					<align>center</align>
					<colordiffuse>grey</colordiffuse>
					<label>$INFO[MusicPlayer.SampleRate,[B], Hz[/B]]</label>
					<visible>!String.IsEmpty(MusicPlayer.SampleRate)</visible>
				</control>
				<control type="button">
					<top>18</top>
					<width>130</width>
					<height>52</height>
					<texturefocus>flags/flag.png</texturefocus>
					<texturenofocus>flags/flag.png</texturenofocus>
					<font>flag_font</font>
					<textcolor>grey</textcolor>
					<align>center</align>
					<colordiffuse>grey</colordiffuse>
					<label>$INFO[MusicPlayer.BitRate,[B], kbps[/B]]</label>
					<visible>!String.IsEmpty(MusicPlayer.BitRate)</visible>
				</control>
				<control type="image">
					<include>MediaFlagVars</include>
					<bordersize>10</bordersize>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<texture>$INFO[MusicPlayer.Channels,flags/channels/,.png]</texture>
					<visible>!String.IsEmpty(MusicPlayer.Channels)</visible>
				</control>
				<control type="image">
					<include>MediaFlagVars</include>
					<bordersize>10</bordersize>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<texture>$INFO[MusicPlayer.Codec,flags/audio/,.png]</texture>
					<visible>!String.IsEmpty(MusicPlayer.Codec)</visible>
				</control>
			</control>
			<control type="progress">
				<left>360</left>
				<top>220</top>
				<width>1545</width>
				<height>38</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<left>360</left>
				<top>220</top>
				<width>300</width>
				<height>35</height>
				<textoffsetx>10</textoffsetx>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ,]</label>
			</control>
			<control type="label">
				<left>360</left>
				<top>220</top>
				<width>1545</width>
				<height>35</height>
				<align>center</align>
				<label>$INFO[System.Time]</label>
			</control>
			<control type="label">
				<left>360</left>
				<top>220</top>
				<width>1545</width>
				<height>35</height>
				<align>right</align>
				<textoffsetx>10</textoffsetx>
				<label>$INFO[Player.FinishTime,$LOCALIZE[31013]: ,]</label>
			</control>
		</control>
	</controls>
</window>