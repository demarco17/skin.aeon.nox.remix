<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<include>ViewFadeAnimation</include>
			<top>40</top>
			<control type="image">
				<description>background image</description>
				<left>104</left>
				<top>545</top>
				<width>1712</width>
				<height>362</height>
				<texture border="18">dialogs/dialog-bg.png</texture>
			</control>
			<control type="panel" id="58">
				<left>120</left>
				<width>1680</width>
				<top>560</top>
				<height>330</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>9050</onleft>
				<onright>5860</onright>
				<pagecontrol>5860</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31091">icon</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>[Container.Content(tvshows) | Container.Content(movies)] + [String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,playlist)]</visible>
				<itemlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
						<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>String.IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>2</bordersize>
						</control>
						<control type="image">
							<top>5</top>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<bordersize>4</bordersize>
						</control>
					</control>
					<control type="group">
						<left>518</left>
						<top>68</top>
						<include>IconWatchedStatus</include>
					</control>
				</itemlayout>
				<focusedlayout height="110" width="560">
					<control type="group">
						<include>IconZoomAnimation</include>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<bordertexture border="5" colordiffuse="$VAR[SkinThemeColour]">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>5</bordersize>
							<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<control type="group">
							<visible>String.IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>560</width>
								<height>110</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<bordertexture border="5" colordiffuse="$VAR[SkinThemeColour]">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<top>5</top>
								<width>300</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<bordersize>4</bordersize>
							</control>
						</control>
						<control type="group">
							<left>515</left>
							<top>66</top>
							<include>IconWatchedStatus</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="5860">
				<left>1801</left>
				<width>12</width>
				<top>560</top>
				<height>330</height>
				<onright>58</onright>
				<onleft>58</onleft>
				<showonepage>false</showonepage>
				<texturesliderbar border="2">scrollbar/texturesliderbar_ver.png</texturesliderbar>
				<texturesliderbarfocus border="2" colordiffuse="$VAR[SkinThemeColour]">scrollbar/texturesliderbarfocus_ver.png</texturesliderbarfocus>
			</control>
		</control>
	</include>
</includes>