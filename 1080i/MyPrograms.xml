<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,500</views>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<onunload>ClearProperty(MediaMenu,Home)</onunload>
	<controls>
		<include>CommonBackground</include>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<include>AddonList</include><!-- view id = 50 -->
			<include condition="!Skin.HasSetting(Wall.Disable)">AddonWall</include><!-- view id = 500 -->
		</control>
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<visible>!Window.IsActive(addoninformation)</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="group">
				<left>90</left>
				<top>980</top>
				<control type="label">
					<width>1150</width>
					<height>42</height>
					<aligny>top</aligny>
					<align>left</align>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]</label>
					<textoffsety>-2</textoffsety>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="label">
					<left>1512</left>
					<width>198</width>
					<height>42</height>
					<aligny>top</aligny>
					<align>right</align>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<label>$INFO[ListItem.AddonVersion]</label>
					<textoffsety>-2</textoffsety>
				</control>
				<control type="label">
					<top>45</top>
					<width>1500</width>
					<height>30</height>
					<align>left</align>
					<font>font13_title</font>
					<textcolor>grey3</textcolor>
					<label>$INFO[ListItem.AddonSummary]</label>
					<textoffsetx>30</textoffsetx>
				</control>
			</control>
		</control>
		<include>Topbar</include>
		<control type="group">
			<left>-440</left>
			<include>SideBladeLeft</include>
			<control type="grouplist" id="9050">
				<include>MediaMenuTop</include>
				<control type="edit" id="19">
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<textwidth>345</textwidth>
					<include>ButtonCommonValues</include>
					<label>587</label>
				</control>
				<control type="radiobutton" id="20">
					<visible>Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<include>ButtonCommonValues</include>
					<label>587</label>
					<onclick>right</onclick>
					<onclick>Filter</onclick>
				</control>
				<control type="button" id="201">
					<description>Actions</description>
					<textwidth>352</textwidth>
					<font>font13_title</font>
					<include>ButtonCommonValues</include>
					<label>31039</label>
					<enable>false</enable>
					<disabledcolor>themecolor</disabledcolor>
				</control>
				<control type="button" id="613">
					<description>Get more</description>
					<include>ButtonCommonValues</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/executable/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<control type="button" id="614">
					<description>Add-on settings</description>
					<include>ButtonCommonValues</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="button" id="616">
					<description>Player Controls</description>
					<include>ButtonCommonValues</include>
					<label>31068</label>
					<onclick>ClearProperty(MediaMenu,Home)</onclick>
					<onclick condition="Player.HasAudio">SetFocus(50)</onclick>
					<onclick condition="Player.HasAudio">ActivateWindow(playercontrols)</onclick>
					<onclick condition="Player.HasVideo">Fullscreen</onclick>
					<onclick condition="Player.HasVideo">ActivateWindow(videoosd)</onclick>
					<visible>Player.HasMedia</visible>
				</control>
			</control>
		</control>
	</controls>
</window>