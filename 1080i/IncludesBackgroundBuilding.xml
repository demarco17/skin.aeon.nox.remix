				<include condition="Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(profiles) | Window.IsActive(skinsettings) | Window.IsActive(settings) | Window.IsActive(filemanager) | Window.IsActive(eventlog)">SystemFallback</include>
				<include condition="Window.IsActive(videos) | Window.IsActive(videoplaylist)">VideoFallback</include>
			</content>
		</control>
