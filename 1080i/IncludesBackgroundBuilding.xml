<includes>
	<include name="CommonBackground">
		<control type="group">
			<animation effect="fade" time="400">WindowOpen</animation>
			<animation effect="fade" time="400">WindowClose</animation>
			<include condition="Window.IsActive(home)">HomeFanart</include>
			<include condition="![Window.IsActive(home) | Window.IsActive(weather)]">GlobalFanart</include>
			<include condition="Window.IsActive(weather)">WeatherBackground</include>
		</control>
		<control type="visualisation">
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio + !Skin.HasSetting(Disable.ShowBackgroundVis) + String.IsEmpty(Window(Videos).Property(PlayingBackgroundMedia)) + ![Window.IsVisible(tvchannels) | Window.IsVisible(radiochannels)] + !SlideShow.IsActive</visible>
		</control>
		<control type="group">
			<visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo) + ![Window.IsVisible(tvchannels) | Window.IsVisible(radiochannels)] + !SlideShow.IsActive</visible>
