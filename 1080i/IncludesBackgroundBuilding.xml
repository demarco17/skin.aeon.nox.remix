				<include>FullscreenDimensions</include>
				<texture>dialogs/black.png</texture>
			</control>
			<control type="videowindow">
				<include>FullscreenDimensions</include>
			</control>
		</control>
		<control type="group">
			<visible>![Window.IsActive(home) | Window.IsActive(startup)]</visible>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture border="1">dialogs/logo_back.png</texture>
			</control>
		</control>
	</include>
	<include name="GlobalFanart">
		<control type="list" id="9033">
			<include>HiddenList</include>
			<content>
				<include condition="Window.IsActive(pictures)">PicturesFallback</include>
