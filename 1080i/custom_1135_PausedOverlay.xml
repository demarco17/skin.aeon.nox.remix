<?xml version="1.0" encoding="UTF-8"?>
<window id="1135" type="dialog">
	<visible>VideoPlayer.IsFullscreen + Player.Paused + System.IdleTime(15) + !Window.IsVisible(SubtitleSearch) + !Skin.HasSetting(Disable.Netflix.Pause)</visible>
	<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
	<visible>!System.HasActiveModalDialog</visible>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<include>OpenCloseAnimation</include>
			<texture colordiffuse="grey">dialogs/black.png</texture>
		</control>
		<control type="grouplist">
			<left>100</left>
			<top>400</top>
			<width>1720</width>
			<height>595</height>
			<usecontrolcoords>true</usecontrolcoords>
			<include>OpenCloseAnimation</include>
			<control type="label">
				<width>1720</width>
				<height>40</height>
				<font>font14_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<label>$LOCALIZE[31126]</label>
			</control>
			<control type="fadelabel">
				<left>15</left>
				<width>1690</width>
				<height>120</height>
				<font>font_KodiFiix</font>
				<textcolor>grey</textcolor>
				<label>$INFO[Player.Title]</label>
				<scrollout>false</scrollout>
				<visible>VideoPlayer.Content(movies)</visible>
			</control>
			<control type="fadelabel">
				<left>15</left>
				<width>1690</width>
				<height>120</height>
				<font>font_KodiFiix</font>
				<textcolor>grey</textcolor>
				<label>$INFO[VideoPlayer.TvShowTitle]</label>
				<scrollout>false</scrollout>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="grouplist">
				<left>15</left>
				<height>70</height>
				<itemgap>40</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image">
					<top>5</top>
					<width>150</width>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/rating/empty.png" colordiffuse="goldenrod">$VAR[VideoPlayerStarRating]</texture>
				</control>
				<control type="label">
					<width>auto</width>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.Year]</label>
					<visible>VideoPlayer.Content(movies)</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.Premiered]</label>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="grouplist">
					<width>150</width>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<control type="label">
						<width>auto</width>
						<font>font15</font>
						<textcolor>grey</textcolor>
						<label>$INFO[VideoPlayer.Duration(H),[B],[/B]$LOCALIZE[31318]]</label>
						<visible>!String.IsEqual(VideoPlayer.Duration(H),0)</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<font>font15</font>
						<textcolor>grey</textcolor>
						<label>$INFO[VideoPlayer.Duration(MM),[B],[/B]$LOCALIZE[31319]]</label>
					</control>
				</control>
				<control type="image">
					<left>-30</left>
					<width>auto</width>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/mpaa/NR.png" colordiffuse="grey2">$VAR[VideoRatingFlagVar]</texture>
				</control>
			</control>
			<control type="label">
				<width>1720</width>
				<height>70</height>
				<font>font15_bold</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<label>$INFO[VideoPlayer.Title]$VAR[EpisodePlayCountVar, [COLOR grey2](,)[/COLOR]]</label>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>1000</width>
				<height>290</height>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<label>$VAR[VideoPlayerPlotVar]</label>
			</control>
		</control>
		<control type="image">
			<include>OpenCloseAnimation</include>
			<visible>!Skin.HasSetting(Disable.PauseClearArt)</visible>
			<left>1500</left>
			<top>844</top>
			<width>420</width>
			<height>236</height>
			<aspectratio aligny="bottom" align="right">keep</aspectratio>
			<texture background="true">$VAR[PlayerArtworkVar]</texture>
		</control>
	</controls>
</window>