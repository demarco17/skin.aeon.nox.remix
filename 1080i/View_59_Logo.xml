<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_59_Logo">
		<control type="group">
			<visible>Control.IsVisible(59)</visible>
			<include>ViewFadeAnimation</include>
			<control type="wraplist" id="59">
				<top>800</top>
				<width>1920</width>
				<height>210</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>9050</onup>
				<ondown>5961</ondown>
				<pagecontrol>5961</pagecontrol>
				<scrolltime>0</scrolltime>
				<viewtype label="31084">Icon</viewtype>
				<visible>[Container.Content(tvshows) | Container.Content(movies) | Container.Content(sets)] + [String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,playlist)]</visible>
				<orientation>horizontal</orientation>
				<itemlayout width="640" height="210" />
				<focusedlayout width="640" height="210">
					<control type="group">
						<animation effect="fade" time="400" reversible="false">Focus</animation>
						<control type="image">
							<left>640</left>
							<width>640</width>
							<height>200</height>
							<aspectratio align="center" aligny="bottom">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
						</control>
						<control type="textbox">
							<left>640</left>
							<width>640</width>
							<height>205</height>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>white</textcolor>
							<font>font_LogoAlt</font>
							<label>$VAR[FloorLabelVar]</label>
							<visible>String.IsEmpty(ListItem.Art(clearlogo))</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<left>1880</left>
				<top>1038</top>
				<animation effect="fade" start="0" end="100" time="400" condition="String.IsEqual(ListItem.Overlay,OverlayWatched.png) | ListItem.IsResumable">Conditional</animation>
				<include>IconWatchedStatus</include>
			</control>
			<control type="scrollbar" id="5961">
				<left>50</left>
				<top>1068</top>
				<width>1820</width>
				<height>12</height>
				<onup>59</onup>
				<ondown>59</ondown>
				<texturesliderbar border="2">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="2" colordiffuse="$VAR[SkinThemeColour]">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
			</control>
		</control>
	</include>
</includes>