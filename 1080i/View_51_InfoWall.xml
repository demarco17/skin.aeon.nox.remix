				<control type="textbox">
					<label>$VAR[MusicPlotVar]</label>
					<top>550</top>
					<left>15</left>
					<width>640</width>
					<height>342</height>
					<font>font14_textbox</font>
					<autoscroll time="4000" delay="4000" repeat="5000">true</autoscroll>
