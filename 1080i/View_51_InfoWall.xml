					<texture background="true" fallback="DefaultAudio.png">$INFO[ListItem.Art(fanart)]</texture>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<fadetime>400</fadetime>
					<bordersize>1</bordersize>
				</control>
				<control type="label">
					<top>401</top>
