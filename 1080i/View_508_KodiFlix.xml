<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="Video_508_KodiFlix">
		<control type="group">
			<visible>Control.IsVisible(508)</visible>
			<include>ViewAnimation</include>
			<control type="label">
				<left>25</left>
				<top>75</top>
				<width>1870</width>
				<height>80</height>
				<font>font_KodiFiix</font>
				<textcolor>grey</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
			<control type="grouplist">
				<left>25</left>
				<top>170</top>
				<width>800</width>
				<height>485</height>
				<orientation>vertical</orientation>
				<visible>!ListItem.IsCollection</visible>
				<control type="label">
					<height>90</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<label>[COLOR themecolor]$LOCALIZE[20339]:[/COLOR][CR]$INFO[ListItem.Director]</label>
					<visible>Container.Content(movies) + !String.IsEmpty(ListItem.Director)</visible>
				</control>
				<control type="label">
					<height>90</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<label>[COLOR themecolor]$LOCALIZE[36902]:[/COLOR][CR]$INFO[ListItem.TVShowTitle]$VAR[EpisodeInfoCountVar, (,)]</label>
					<visible>Container.Content(episodes) + !String.IsEmpty(ListItem.TVShowTitle)</visible>
				</control>
				<control type="label">
					<height>90</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<label>[COLOR themecolor]$LOCALIZE[515]:[/COLOR][CR]$INFO[ListItem.Genre]</label>
					<visible>!String.IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="grouplist">
					<width>600</width>
					<height>90</height>
					<orientation>horizontal</orientation>
					<visible>Container.Content(tvshows)</visible>
					<control type="label">
						<width>220</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[33054]:[/COLOR][CR]$INFO[ListItem.Property(TotalSeasons)]</label>
						<visible>!String.IsEmpty(ListItem.Property(TotalSeasons))</visible>
					</control>
					<control type="label">
						<width>300</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[20360]:[/COLOR][CR]$INFO[ListItem.Property(TotalEpisodes)]$INFO[ListItem.Property(UnWatchedEpisodes), (,[LOWERCASE] $LOCALIZE[16101][/LOWERCASE])]</label>
						<visible>!String.IsEmpty(ListItem.Property(TotalEpisodes))</visible>
					</control>
				</control>
				<control type="grouplist">
					<width>600</width>
					<height>90</height>
					<orientation>horizontal</orientation>
					<control type="label">
						<width>220</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[2050]:[/COLOR][CR]$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
						<visible>!String.IsEmpty(ListItem.Duration)</visible>
					</control>
					<control type="label">
						<width>220</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[20416]:[/COLOR][CR]$INFO[ListItem.Premiered]</label>
						<visible>[Container.Content(episodes) | Container.Content(tvshows)] + !String.IsEmpty(ListItem.Premiered)</visible>
					</control>
					<control type="label">
						<width>150</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[345]:[/COLOR][CR]$INFO[ListItem.Year]</label>
						<visible>Container.Content(movies) + !String.IsEmpty(ListItem.Year)</visible>
					</control>
					<control type="label">
						<width>150</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR themecolor]$LOCALIZE[563]:[/COLOR][CR]$INFO[ListItem.Rating]</label>
						<visible>!String.IsEmpty(ListItem.Rating)</visible>
					</control>
				</control>
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<width>800</width>
					<height>215</height>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<pagecontrol>62</pagecontrol>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(62)</autoscroll>
				</control>
			</control>
			<control type="scrollbar" id="62">
				<top>440</top>
				<width>10</width>
				<height>215</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<onleft>508</onleft>
				<onright>508</onright>
				<texturesliderbar border="2">scrollbar/texturesliderbar_ver.png</texturesliderbar>
				<texturesliderbarfocus border="2" colordiffuse="themecolor">scrollbar/texturesliderbarfocus_ver.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>!ListItem.IsCollection</visible>
			</control>
			<control type="group">
				<left>25</left>
				<top>170</top>
				<visible>ListItem.IsCollection</visible>
				<control type="group">
					<include content="InfoList">
						<param name="height">445</param>
					</include>
				</control>
				<control type="scrollbar" id="64">
					<left>-25</left>
					<top>50</top>
					<width>10</width>
					<height>445</height>
					<onup>SetProperty(MediaMenu,True,home)</onup>
					<onup>SetFocus(9050)</onup>
					<onleft>508</onleft>
					<onright>508</onright>
					<texturesliderbar border="2">scrollbar/texturesliderbar_ver.png</texturesliderbar>
					<texturesliderbarfocus border="2" colordiffuse="themecolor">scrollbar/texturesliderbarfocus_ver.png</texturesliderbarfocus>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
				</control>
			</control>
			<control type="fixedlist" id="508">
				<top>705</top>
				<width>1920</width>
				<height>375</height>
				<visible>[Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)] + [String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,playlist)]</visible>
				<onup condition="!ListItem.IsCollection">62</onup>
				<onup condition="ListItem.IsCollection">64</onup>
				<ondown>63</ondown>
				<viewtype label="31093">bigwrap</viewtype>
				<pagecontrol>63</pagecontrol>
				<orientation>horizontal</orientation>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout height="270" width="480">
					<control type="image">
						<left>20</left>
						<width>440</width>
						<height>248</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[LandscapeVar]</texture>
					</control>
					<control type="image">
						<left>20</left>
						<top>115</top>
						<width>440</width>
						<height>125</height>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
						<visible>String.IsEmpty(ListItem.Art(landscape)) + !String.IsEmpty(ListItem.Art(clearlogo))</visible>
					</control>
					<control type="image">
						<left>410</left>
						<width>50</width>
						<height>50</height>
						<texture>$INFO[ListItem.Overlay,overlays/]</texture>
						<aspectratio align="right" aligny="top">keep</aspectratio>
					</control>
					<control type="image">
						<left>20</left>
						<top>249</top>
						<width>440</width>
						<height>248</height>
						<aspectratio>scale</aspectratio>
						<texture background="true" flipy="true" diffuse="thumbs/thumb_diffuse.png">$VAR[LandscapeVar]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="270" width="480">
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="400" tween="sine" easing="inout" center="auto" />
						</animation>
						<control type="image">
							<left>20</left>
							<width>440</width>
							<height>248</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[LandscapeVar]</texture>
							<bordertexture border="5" colordiffuse="themecolor">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>5</bordersize>
						</control>
						<control type="image">
							<left>20</left>
							<top>115</top>
							<width>440</width>
							<height>125</height>
							<aspectratio align="center" aligny="bottom">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>String.IsEmpty(ListItem.Art(landscape)) + !String.IsEmpty(ListItem.Art(clearlogo))</visible>
						</control>
						<control type="image">
							<left>404</left>
							<top>5</top>
							<width>50</width>
							<height>50</height>
							<texture>$INFO[ListItem.Overlay,overlays/]</texture>
							<aspectratio align="right" aligny="top">keep</aspectratio>
						</control>
						<control type="image">
							<left>20</left>
							<top>249</top>
							<width>440</width>
							<height>248</height>
							<aspectratio>scale</aspectratio>
							<texture background="true" flipy="true" diffuse="thumbs/thumb_diffuse.png">$VAR[LandscapeVar]</texture>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="63">
				<top>1068</top>
				<width>1920</width>
				<height>12</height>
				<onup>508</onup>
				<ondown>508</ondown>
				<texturesliderbar border="2">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="2" colordiffuse="themecolor">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(63) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>
</includes>
