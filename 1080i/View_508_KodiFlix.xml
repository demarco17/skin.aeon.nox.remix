					<control type="label">
						<width>150</width>
						<height>90</height>
						<font>font14</font>
						<textcolor>grey</textcolor>
						<label>[COLOR $VAR[SkinThemeColour]]$LOCALIZE[345]:[/COLOR][CR]$INFO[ListItem.Year]</label>
