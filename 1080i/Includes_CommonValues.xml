<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="FullscreenDimensions">
		<left>0</left>
		<top>0</top>
		<width>1920</width>
		<height>1080</height>
	</include>
	<include name="HiddenObject">
		<left>-300</left>
		<top>-300</top>
		<width>1</width>
		<height>1</height>
	</include>
	<include name="HiddenList">
		<left>-10</left>
		<top>-10</top>
		<width>1</width>
		<height>1</height>
		<itemlayout width="1" height="1" />
		<focusedlayout width="1" height="1" />
	</include>
	<!-- Buttons -->
	<include name="ButtonCommonValues">
		<width>400</width>
		<height>60</height>
		<textoffsetx>15</textoffsetx>
		<textcolor>grey</textcolor>
		<focusedcolor>white</focusedcolor>
		<textwidth>300</textwidth>
		<aligny>center</aligny>
		<font>font13</font>
		<radioposx>340</radioposx>
	</include>
	<include name="ButtonInfoDialogsCommonValues">
		<height>70</height>
		<width>148.5</width>
		<align>center</align>
		<aligny>center</aligny>
		<font>IconMedium</font>
		<textcolor>grey</textcolor>
		<focusedcolor>white</focusedcolor>
		<texturenofocus border="4">dialogs/separator5.png</texturenofocus>
		<alttexturenofocus border="4">dialogs/separator5.png</alttexturenofocus>
	</include>
	<!-- KeyBoard -->
	<include name="Objects_KeyOffVars">
		<textoffsety>32</textoffsety>
		<align>center</align>
		<aligny>center</aligny>
		<font>font15</font>
		<textcolor>grey</textcolor>
		<focusedcolor>white</focusedcolor>
		<selectedcolor>$VAR[SkinThemeColour]</selectedcolor>
	</include>
	<include name="Objects_DoubleKeyOff">
		<left>-123</left>
		<width>320</width>
		<height>80</height>
		<texturefocus border="4" colordiffuse="$VAR[SkinThemeColour]">dialogs/keyboard_focus.png</texturefocus>
		<texturenofocus colordiffuse="dialogInner">dialogs/black.png</texturenofocus>
		<alttexturefocus border="4" colordiffuse="$VAR[SkinThemeColour]">dialogs/keyboard_focus.png</alttexturefocus>
		<alttexturenofocus colordiffuse="dialogInner">dialogs/black.png</alttexturenofocus>
		<include>Objects_KeyOffVars</include>
	</include>
	<include name="Objects_SingleKeyOff">
		<width>80</width>
		<height>80</height>
		<texturefocus border="4" colordiffuse="$VAR[SkinThemeColour]">dialogs/keyboard_focus.png</texturefocus>
		<texturenofocus colordiffuse="dialogInner">dialogs/black.png</texturenofocus>
		<include>Objects_KeyOffVars</include>
	</include>
	<include name="ShowCaseInfoPanelButtonsValues">
		<height>90</height>
		<width>501</width>
		<textoffsetx>15</textoffsetx>
		<aligny>top</aligny>
		<font>font14</font>
		<textcolor>grey</textcolor>
		<focusedcolor>white</focusedcolor>
		<texturefocus border="4">dialogs/separator2.png</texturefocus>
		<texturenofocus border="4">dialogs/separator2.png</texturenofocus>
	</include>
	<include name="SettingsPanelButtonsValues">
		<height>90</height>
		<width>1256</width>
		<textoffsetx>15</textoffsetx>
		<textoffsety>-4</textoffsety>
		<aligny>top</aligny>
		<font>font15</font>
		<textcolor>grey</textcolor>
		<focusedcolor>white</focusedcolor>
		<texturefocus border="4">dialogs/separator2.png</texturefocus>
		<texturenofocus border="4">dialogs/separator2.png</texturenofocus>
	</include>
	<!-- Media Flags -->
	<include name="MediaFlagVars">
		<width>135</width>
		<height>90</height>
		<aspectratio>keep</aspectratio>
		<fadetime>200</fadetime>
		<colordiffuse>grey</colordiffuse>
	</include>
	<!-- Scroll Label -->
	<include name="ScrollLabel">
		<control type="label">
			<include>VisibleFadeAnimation</include>
			<top>1000</top>
			<width>120</width>
			<height>60</height>
			<textcolor>grey</textcolor>
			<textoffsetx>20</textoffsetx>
			<font>font35_title_bold</font>
			<label>$INFO[ListItem.SortLetter]</label>
			<visible>Container.Scrolling + [String.IsEqual(Container.SortMethod,$LOCALIZE[551]) | String.IsEqual(Container.SortMethod,$LOCALIZE[561]) | String.IsEqual(Container.SortMethod,$LOCALIZE[558]) | String.IsEqual(Container.SortMethod,$LOCALIZE[557]) | String.IsEqual(Container.SortMethod,$LOCALIZE[556])]</visible>
		</control>
	</include>
	<!-- TV Shows Next Aired script -->
	<include name="TVNextAiredListCommonLayout">
		<left>522</left>
		<top>32</top>
		<width>1317</width>
		<height>840</height>
		<onright>60</onright>
		<onleft>9000</onleft>
		<orientation>vertical</orientation>
		<scrolltime>400</scrolltime>
		<pagecontrol>60</pagecontrol>
		<itemlayout height="420" width="439">
			<control type="image">
				<left>438</left>
				<width>2</width>
				<height>418</height>
				<texture border="1">dialogs/separator3.png</texture>
			</control>
			<control type="image">
				<width>439</width>
				<height>420</height>
				<texture border="4">dialogs/separator2.png</texture>
			</control>
			<control type="image">
				<description>Poster</description>
				<top>10</top>
				<width>437</width>
				<height>185</height>
				<aspectratio>keep</aspectratio>
				<texture background="true">$INFO[ListItem.Property(Art(poster))]</texture>
				<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
				<bordersize>1</bordersize>
				<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),0)</visible>
			</control>
			<control type="image">
				<description>Banner</description>
				<left>10</left>
				<top>10</top>
				<width>419</width>
				<height>180</height>
				<aspectratio aligny="center">keep</aspectratio>
				<texture background="true">$INFO[ListItem.Property(Art(banner))]</texture>
				<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
				<bordersize>1</bordersize>
				<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),1)</visible>
			</control>
			<control type="image">
				<description>Logo</description>
				<top>10</top>
				<width>439</width>
				<height>160</height>
				<aspectratio aligny="top">keep</aspectratio>
				<texture background="true">$INFO[ListItem.Property(Art(clearlogo))]</texture>
				<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),2)</visible>
			</control>
			<control type="textbox">
				<description>NextEpisode/AirTime - Studio</description>
				<left>10</left>
				<top>195</top>
				<width>419</width>
				<height>200</height>
				<label>$LOCALIZE[209]:[CR][COLOR grey]$INFO[ListItem.Property(NextSeasonNumber),S,]$INFO[ListItem.Property(NextEpisodeNumber),E,]$INFO[ListItem.Property(NextTitle), - ,][/COLOR][CR]$LOCALIZE[31012]:[CR][COLOR grey]$INFO[ListItem.Property(ShortTime)]$INFO[ListItem.Property(Network), - ,][/COLOR]</label>
				<textcolor>$VAR[SkinThemeColour]</textcolor>
				<font>font14</font>
				<align>center</align>
				<autoscroll>false</autoscroll>
			</control>
		</itemlayout>
		<focusedlayout height="420" width="439">
			<control type="group">
				<include>IconZoomAnimation</include>
				<control type="image">
					<width>439</width>
					<height>418</height>
					<texture colordiffuse="dialogInner">dialogs/black.png</texture>
					<bordertexture border="5" colordiffuse="$VAR[SkinThemeColour]">thumbs/thumbnail_focused.png</bordertexture>
					<bordersize>5</bordersize>
					<visible>ControlGroup(9001).HasFocus()</visible>
				</control>
				<control type="image">
					<description>Poster</description>
					<top>10</top>
					<width>437</width>
					<height>185</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">$INFO[ListItem.Property(Art(poster))]</texture>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>1</bordersize>
					<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),0)</visible>
				</control>
				<control type="image">
					<description>Banner</description>
					<left>10</left>
					<top>10</top>
					<width>419</width>
					<height>180</height>
					<aspectratio aligny="center">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Property(Art(banner))]</texture>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>1</bordersize>
					<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),1)</visible>
				</control>
				<control type="image">
					<description>Logo</description>
					<top>10</top>
					<width>439</width>
					<height>160</height>
					<aspectratio aligny="top">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Property(Art(clearlogo))]</texture>
					<visible>String.IsEqual(Window(Home).Property(TVGuide.ThumbType),2)</visible>
				</control>
				<control type="textbox">
					<description>NextEpisode/AirTime - Studio</description>
					<left>10</left>
					<top>195</top>
					<width>419</width>
					<height>200</height>
					<label>$LOCALIZE[209]:[CR][COLOR grey]$INFO[ListItem.Property(NextSeasonNumber),S,]$INFO[ListItem.Property(NextEpisodeNumber),E,]$INFO[ListItem.Property(NextTitle), - ,][/COLOR][CR]$LOCALIZE[31012]:[CR][COLOR grey]$INFO[ListItem.Property(ShortTime)]$INFO[ListItem.Property(Network), - ,][/COLOR]</label>
					<textcolor>$VAR[SkinThemeColour]</textcolor>
					<font>font14</font>
					<align>center</align>
					<autoscroll time="3500" delay="3000" repeat="3000">True</autoscroll>
				</control>
			</control>
		</focusedlayout>
	</include>
</includes>