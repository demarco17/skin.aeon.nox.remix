<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>[Player.Seeking | Player.Paused | Player.Forwarding | Player.Rewinding | [Player.DisplayAfterSeek + String.IsEmpty(Window(home).Property(PseudoTVRunning))] | Player.IsTempo] + [VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !Window.IsVisible(1135)</visible>
	<controls>
		<include>PVRChannelNumberInput</include>
		<control type="group">
			<visible>!Player.HasGame</visible>
			<include>OpenCloseAnimation</include>
			<top>1010</top>
			<control type="image">
				<top>20</top>
				<width>1920</width>
				<height>56</height>
				<texture border="4" flipy="true">dialogs/InfoBar.png</texture>
			</control>
			<control type="progress">
				<left>5</left>
				<top>27</top>
				<width>1910</width>
				<height>38</height>
				<info>PVR.EpgEventProgress</info>
				<visible>VideoPlayer.HasEpg</visible>
			</control>
			<control type="progress">
				<left>5</left>
				<top>27</top>
				<width>1910</width>
				<height>38</height>
				<info>Player.Progress</info>
				<visible>!VideoPlayer.HasEpg</visible>
			</control>
			<control type="label">
				<left>12</left>
				<top>26</top>
				<width>40</width>
				<height>38</height>
				<label>$VAR[HomeNowPlayIcon]</label>
				<font>IconTiny</font>
			</control>
			<control type="label">
				<left>35</left>
				<top>27</top>
				<width>100</width>
				<height>35</height>
				<textoffsetx>15</textoffsetx>
				<align>left</align>
				<label>$VAR[VideoPlayerForwardRewindVar]</label>
				<visible>Player.Forwarding | Player.Rewinding | Player.IsTempo</visible>
			</control>
			<control type="fadelabel">
				<left>50</left>
				<top>24</top>
				<width>845</width>
				<height>35</height>
				<align>left</align>
				<label>$VAR[PlayerTitleLabelVar]</label>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
				<visible>![Player.Forwarding | Player.Rewinding | Player.IsTempo]</visible>
			</control>
			<control type="label">
				<top>27</top>
				<width>1920</width>
				<height>35</height>
				<textoffsetx>15</textoffsetx>
				<align>center</align>
				<label>$VAR[SeekLabelVar]</label>
			</control>
			<control type="label">
				<top>27</top>
				<width>1920</width>
				<height>35</height>
				<textoffsetx>15</textoffsetx>
				<align>right</align>
				<label>$VAR[SeekTimeLabelVar]</label>
			</control>
		</control>
		<control type="image">
			<visible>!Skin.HasSetting(Disable.PauseClearArt)</visible>
			<visible>Player.Paused + !Window.IsVisible(SubtitleSearch)</visible>
			<visible>!Player.HasGame</visible>
			<left>1500</left>
			<top>794</top>
			<width>420</width>
			<height>236</height>
			<aspectratio aligny="bottom" align="right">keep</aspectratio>
			<texture background="true">$VAR[PlayerArtworkVar]</texture>
			<include>VisibleFadeAnimation</include>
		</control>
	</controls>
</window>